<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#40000000" /> <!-- Warna bayangan (transparan hitam) -->
            <corners android:radius="50dp" /> <!-- Radius penuh -->
        </shape>
    </item>

    <!-- Button Layer -->
    <item android:top="4dp" android:left="4dp"> <!-- Posisi tombol di atas bayangan -->
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna latar tombol -->
            <corners android:radius="50dp" /> <!-- Radius penuh -->
        </shape>
    </item>
</layer-list>
